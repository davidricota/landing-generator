<?xml version="1.0"?>
<ruleset name="LandingGeneratorPlugin">
  <description>WordPress Coding Standards para Landing Generator Plugin</description>

  <!-- Usa los sniffs de WordPress -->
  <rule ref="WordPress"/>
  <rule ref="WordPress-Extra"/>
  <rule ref="WordPress-Core"/>
  <rule ref="WordPress-Docs"/>

  <!-- Excluir directorios que no deben analizarse -->
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>tests/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>

  <!-- Opcional: mostrar errores de hasta nivel 6 -->
  <arg name="severity" value="6"/>
</ruleset>
